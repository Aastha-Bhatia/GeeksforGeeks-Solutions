class Solution{
    public int minTime(int[] arr, int k){
        int low=0;
        int high=0;
        int ans=-1;
        for(int x:arr){
            low=Math.max(x,low);
            high+=x;
        }
        // using binary search..
        while(low<=high){
            int mid=low+(high-low)/2;
            if(canPaint(arr,mid,k)){
                ans=mid;
                high=mid-1;
            }
            else{
                low=mid+1;
            }
        }
        return ans;
    }
    // counting the number of painters..
    public boolean canPaint(int arr[],int time,int k){
        int count=0;
        int sum=0;
        for(int x:arr){
            sum+=x;
            if(sum>time){
                // we need to increase the painter.. and 
                count++;
                // sum will be updated with current value...
                sum=x;
            }
        }
        count++;
        return count<=k;
    }
}
